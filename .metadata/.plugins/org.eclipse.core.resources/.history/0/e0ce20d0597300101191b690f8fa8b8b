<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- App Script -->
<script>
    function loadApplications() {
        const section = document.getElementById('applicationsSection');
        const tbody = document.getElementById('applicationsTableBody');
        section.style.display = 'block';
        tbody.innerHTML = '<tr><td colspan="6">Loading...</td></tr>';

        fetch('/api/applications')
            .then(response => response.json())
            .then(data => {
                tbody.innerHTML = '';
                if (data.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="6">No applications found</td></tr>';
                } else {
                    data.forEach((app, index) => {
                        let row = `<tr>
                            <td>${index + 1}</td>
                            <td>${app.caseNum}</td>
                            <td>${app.name}</td>
                            <td>${app.mobileNumber}</td>
                            <td>${app.gender}</td>
                            <td>${app.ssn}</td>
                        </tr>`;
                        tbody.innerHTML += row;
                    });
                }
            })
            .catch(error => {
                tbody.innerHTML = '<tr><td colspan="6" class="text-danger">Failed to load data</td></tr>';
                console.error(error);
            });
    }
</script>

