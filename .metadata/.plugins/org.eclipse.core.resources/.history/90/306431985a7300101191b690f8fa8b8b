<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // Sidebar dropdown fix: force dropdown to behave like a sidebar expand
    document.querySelectorAll('.sidebar .dropdown-toggle').forEach(function (el) {
        el.addEventListener('click', function (e) {
            e.preventDefault();
            let parent = el.closest('.dropdown');
            if (!parent) return;
            // Hide all others
            document.querySelectorAll('.sidebar .dropdown').forEach(function (dd) {
                if (dd !== parent) dd.classList.remove('show');
            });
            parent.classList.toggle('show');
            let menu = parent.querySelector('.dropdown-menu');
            if(menu) menu.classList.toggle('show');
        });
    });

    // Optional: Hide dropdown when clicking outside the sidebar
    document.addEventListener('click', function(event) {
        if (!event.target.closest('.sidebar')) {
            document.querySelectorAll('.sidebar .dropdown-menu').forEach(function (menu) {
                menu.classList.remove('show');
            });
            document.querySelectorAll('.sidebar .dropdown').forEach(function (dd) {
                dd.classList.remove('show');
            });
        }
    });
</script>

