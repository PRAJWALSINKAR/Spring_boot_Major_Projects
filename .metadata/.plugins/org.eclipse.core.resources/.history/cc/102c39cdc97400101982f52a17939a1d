    <h4 class="mb-4">Step 4: Kids Details</h4>

    <!-- Get Details Form -->
    <form th:action="@{/dc/kids/fetch}" method="get" class="mb-3 d-flex">
        <input type="text" name="caseNumber" th:value="${caseNumber}" class="form-control me-2" placeholder="Enter Case Number" required>
        <button type="submit" class="btn btn-info">Get Details</button>
    </form>
    <p class="text-danger" th:text="${message}"></p>

    <!-- Kids Form -->
    <form th:action="@{/dc/kids/save}" th:object="${kidsForm}" method="post">
        <input type="hidden" name="caseNumber" th:value="${caseNumber}" />

        <table class="table" id="kidsTableBody">
            <thead>
                <tr>
                    <th>Kid Name</th>
                    <th>Kid Age</th>
                    <th>Kid SSN</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <tr th:each="kid, kidStat : ${kidsForm.kids}">
                    <td><input type="text" th:field="*{kids[${kidStat.index}].kidName}" class="form-control" /></td>
                    <td><input type="number" th:field="*{kids[${kidStat.index}].kidAge}" class="form-control" /></td>
                    <td><input type="text" th:field="*{kids[${kidStat.index}].kidSsn}" class="form-control" /></td>
                    <td>
                        <a th:if="${kid.id != null}" 
                           th:href="@{'/dc/kids/delete/' + ${kid.id} + '/' + ${caseNumber}}"
                           class="btn btn-danger btn-sm"
                           onclick="return confirm('Are you sure you want to delete this kid?')">
                            Delete
                        </a>
                        <button type="button" class="btn btn-warning btn-sm" onclick="removeKidRow(this)">Remove</button>
                    </td>
                </tr>
            </tbody>
        </table>

        <button type="button" class="btn btn-success mb-3" onclick="addKidRow()">Add Kid</button>

        <div class="d-flex justify-content-between">
            <button type="submit" name="redirectToDashboard" value="true" class="btn btn-secondary">Dashboard</button>
            <button type="submit" class="btn btn-primary">Next â†’</button>
        </div>
    </form>
