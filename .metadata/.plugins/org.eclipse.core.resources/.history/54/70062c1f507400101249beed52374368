<script>
    function addKidRow() {
        var tbody = document.getElementById('kidsTableBody');
        var index = tbody.rows.length;
        var newRow = tbody.rows[0].cloneNode(true);
        // Clear values
        Array.from(newRow.querySelectorAll('input')).forEach(inp => inp.value = '');
        // Update name attributes (so Spring binds as List)
        Array.from(newRow.querySelectorAll('input')).forEach(inp => {
            inp.name = inp.name.replace(/\d+/, index);
        });
        tbody.appendChild(newRow);
    }
    function removeKidRow(btn) {
        var row = btn.closest('tr');
        var tbody = row.parentElement;
        if (tbody.rows.length > 1) { tbody.removeChild(row); }
    }
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
