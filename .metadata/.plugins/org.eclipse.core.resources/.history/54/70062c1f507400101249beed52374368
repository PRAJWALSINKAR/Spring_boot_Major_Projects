<div class="form-container">
    <h4 class="mb-4">Step 4: Kids Details</h4>
    <form th:action="@{/dc/kids/save}" method="post">
        <input type="hidden" name="caseNumber" th:value="${caseNumber}" />
        <table class="table">
            <thead>
                <tr>
                    <th>Kid Name</th>
                    <th>Kid Age</th>
                    <th>Kid SSN</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="kidsTableBody">
                <tr th:each="kid, stat : ${kids}">
                    <td><input type="text" name="kids[__${stat.index}__].kidName" th:value="${kid.kidName}" class="form-control" required /></td>
                    <td><input type="number" name="kids[__${stat.index}__].kidAge" th:value="${kid.kidAge}" class="form-control" required /></td>
                    <td><input type="text" name="kids[__${stat.index}__].kidSsn" th:value="${kid.kidSsn}" class="form-control" required /></td>
                    <td>
                        <button type="button" class="btn btn-danger" onclick="removeKidRow(this)">Delete</button>
                    </td>
                </tr>
            </tbody>
        </table>
        <button type="button" id="addKidBtn" class="btn btn-success" onclick="addKidRow()">Add Kid</button>
        <div class="text-end mt-3">
            <button type="submit" class="btn btn-primary">Next â†’</button>
        </div>
    </form>
