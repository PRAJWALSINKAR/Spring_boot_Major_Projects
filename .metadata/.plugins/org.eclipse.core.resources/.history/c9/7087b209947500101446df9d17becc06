package prajwal.in.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.*;
import org.springframework.web.servlet.mvc.support.RedirectAttributes;
import prajwal.in.entity.CitizenInfo;
import prajwal.in.entity.Plan;
import prajwal.in.repo.CitizenInfoRepo;
import prajwal.in.repo.PlanRepo;

import java.util.Optional;

@Controller
@RequestMapping("/citizen-plan")
public class CitizenPlanController {

    @Autowired
    private CitizenInfoRepo citizenInfoRepo;

    @Autowired
    private PlanRepo planRepo;

    /**
     * Show plan selection form for a specific citizen
     */
    @GetMapping("/select/{caseNumber}")
    public String showPlanSelection(@PathVariable String caseNumber, Model model) {
        model.addAttribute("caseNumber", caseNumber);
        model.addAttribute("plans", planRepo.findAll());
        return "select-plan"; // make select-plan.html
    }

    /**
     * Save citizen's plan application
     */
    @PostMapping("/apply")
    public String applyForPlan(@RequestParam String caseNumber,
                                @RequestParam String planName,
                                RedirectAttributes redirectAttributes) {

        // Check if citizen already applied for the same plan
        Optional<CitizenInfo> existingInfoOpt = citizenInfoRepo.findByCaseNumber(caseNumber);
        if (existingInfoOpt.isPresent()) {
            CitizenInfo existingInfo = existingInfoOpt.get();
            if (planName.equalsIgnoreCase(existingInfo.getSelectedPlan())) {
                redirectAttributes.addFlashAttribute("errMsg",
                        "You have already applied for the plan: " + planName);
                return "redirect:/citizen-plan/select/" + caseNumber;
            }

            // If different plan, update only the plan field
            existingInfo.setSelectedPlan(planName);
            citizenInfoRepo.save(existingInfo);
            redirectAttributes.addFlashAttribute("succMsg",
                    "Plan updated successfully to: " + planName);
            return "redirect:/application/view";
        }

        // No record yet â†’ Create new
        CitizenInfo newInfo = new CitizenInfo();
        newInfo.setCaseNumber(caseNumber);
        newInfo.setSelectedPlan(planName);
        citizenInfoRepo.save(newInfo);

        redirectAttributes.addFlashAttribute("succMsg",
                "Plan applied successfully: " + planName);
        return "redirect:/application/view";
    }
}
