<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
document.querySelectorAll('.has-popup').forEach(li=>{
    li.addEventListener('mouseenter',()=>{
        document.querySelectorAll('.submenu.show').forEach(e=>e.classList.remove('show'));
        let popup=document.getElementById(li.getAttribute('data-popup'));
        let rect=li.getBoundingClientRect();
        popup.style.top=rect.top+"px";
        popup.style.left=rect.right+"px";
        popup.classList.add('show');
    });
    li.addEventListener('mouseleave',()=>{
        let popup=document.getElementById(li.getAttribute('data-popup'));
        setTimeout(()=>{ if(!popup.matches(':hover')) popup.classList.remove('show'); },100);
    });
});
document.querySelectorAll('.submenu').forEach(menu=>{
    menu.addEventListener('mouseleave',()=> menu.classList.remove('show'));
    menu.addEventListener('mouseenter',()=> menu.classList.add('show'));
});
</script>
