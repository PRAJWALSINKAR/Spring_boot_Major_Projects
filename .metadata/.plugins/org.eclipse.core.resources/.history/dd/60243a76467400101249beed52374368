package prajwal.in.entity;

import jakarta.persistence.*;
import lombok.Data;
import java.time.LocalDate;

@Entity
@Data
@Table(name = "CITIZEN_INFO")
public class CitizenInfo {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;

    @Column(unique = true, nullable = false)
    private String caseNumber;  // Link to CitizenEntity.caseNumber

    // Income details
    private Double monthlyIncome;
    private Double otherIncome;
    private String employerName;
    private String employmentStatus;
    // Add more income fields as needed

    // Education details
    private String highestEducation;
    private Integer graduationYear;
    // Add more education fields 

    // Kids details (assuming max 2 kids, else consider separate entity)
    private String kid1Name;
    private LocalDate kid1Dob;
    private String kid2Name;
    private LocalDate kid2Dob;
    private String selectedPlan;
    // etc.

    // Additional fields (family, employment...) can be added here similarly
}
